<div class="container" >
    <div class="row text-center mb-3 offset-3">
        <div class="col-md-8 mb-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Takas Takip Sistemi</h4>
                    @if (Request.IsAuthenticated)
                    {
                        <a class="nav-link" href="@Url.Action("Index", "IlacTakip",new { area = "IlacTakip" })">
                            <img class="img-fluid" src="~/Content/images/ph1.png" title="Takas Takip Sistemi" />
                        </a>
                    }
                    else
                    {
                        <a class="nav-link" href="@Url.Action("Login", "Account",new { area = "" })">
                            <img class="img-fluid" src="~/Content/images/ph1.png" title="Takas Takip Sistemi" />
                        </a>
                    }
                        <a class="nav-link" href="@Url.Action("Login", "Account",new { area = "" })">
                            <h5 class="card-title">Giriş için tıklayınız</h5>
                        </a>
                </div>
            </div>
        </div>
    </div>
</div>

