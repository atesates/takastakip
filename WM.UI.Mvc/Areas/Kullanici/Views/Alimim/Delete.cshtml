<div>
    <h4>@ViewBag.IlacAdi</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.AlimTarihi):       @Html.DisplayFor(model => model.AlimTarihi)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Miktar):   @Html.DisplayFor(model => model.Miktar)
