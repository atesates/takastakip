    //SelectList nobetUstGruplar = ViewBag.NobetUstGrupId;
    ////SelectList nobetGruplar = ViewBag.NobetGrupId;
    var rolId = ViewBag.rolId;
}
<h4>
    Gruplarım
    @if (rolId < 3)
    {
        <a class="btn btn-outline-success ml-5" href="@Url.Action("Create", "EczaneGrup", new { area = "Kullanici" })"><span class="fa fa-plus"></span> Yeni Kayıt</a>
    }
</h4>

<hr />


<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EczaneGrupDetaylar.FirstOrDefault().GrupAdi)
            </th>

            @*<th>
                İşlem
            </th>*@
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.EczaneGrupDetaylar)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GrupAdi)
            </td>

            <td>
                @if (item.BitisTarihi != null)
                {
                    <label class="badge badge-danger">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Pasif
                    </label>
                }
                else
                {
                    <label class="badge badge-success">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Aktif
                    </label>
                }
            </td>
            @*<td>
                @{
                    var target = $"#islem{@item.Id}";
                }
                <button class="btn btn-sm btn-secondary d-sm-block d-md-none" type="button" data-toggle="collapse" data-target="@target" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-cog"></span>
                </button>
                <div class="collapse d-md-block" id="@target.Remove(0,1)">
                    @Html.ActionLink("Rapor ", "GrupSec", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm fa fa-edit fa-lg" })
                </div>
            </td>*@
        </tr>
    }

</table>
